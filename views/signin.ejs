  <div class="container" id="container">

    <div class="form-container sign-in-container">
      <form action="/signin" method="post">
        <img src="./images/logo.jpg" style="width:300px;height:150px;">


        <% if(hasErrors) {%> <br>
        <div class="alertbox">
          <!-- <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a> -->
          <% _.forEach(messages, function(error){ %>
          <%= error %>
          <% }) %>

        </div>
        <% } %>


        <input type="email" name="email" placeholder="Email" required='true' />
        <input type="password" name="password" placeholder="Password" required='true' />
        <a href="forgot">Forgot your password?</a>
        <button type="submit">Sign In</button>
      </form>
    </div>
    <div class="overlay-container">
      <div class="overlay">

        <div class="overlay-panel overlay-right ">
          <h1>New Here?</h1>
          <p>Enter your personal details and start texting your buddies!</p>
          <button onclick="window.location.href='signup';">Sign Up Now
          </button>
        </div>
      </div>
    </div>
    <footer>
      <p>
        Created by <i class="fa fa-heart"></i>
        <a target="_blank" href="About.html">Team Text Connector</a>
      </p>
    </footer>

</body>

</html>