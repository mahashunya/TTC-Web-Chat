<header>
  <!--- Navbar --->
  <nav class="navbar navbar-expand-lg" style='background-color: #222;'>
    <div class="container">
      <a class="navbar-brand text-white" style="color: #9993B2;" href="#"></i>TextConnect</a>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
        </ul>
        <ul class="nav navbar-nav navbar-right" id="reload">
          <li>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span style="color: #9993B2;" class="glyphicon fa fa-bell nav-glyphicon"></span><b class="caret"
                style="color: #9993B2;"></b>

              <% if(data.totalRequest > 0) {%>
              <span style="  color: black;" class="label label-primary nav-label-icon"><%= data.totalRequest %></span>
              <% } else { %>
              <span style="display:none;" class="label label-primary nav-label-icon"> </span>
              <% } %>


            </a>

            <ul class="dropdown-menu" style="border-radius: 5px;">
              <li>
                <div class="navbar-login" id="requestBar">
                  <div class="col-md-12">
                    <div class="row">
                      <div class="dropdown-tag">
                        <h3 class="text-center dropdown-tag-head">
                          Friend Requests
                        </h3>
                      </div>
                    </div>
                  </div>

                  <div class="col-md-12">
                    <% if(data.request.length > 0) {%>
                    <% _.forEach(data.request,function(val) { %>
                    <div class="row">
                      <div class="col-md-3">
                        <p class="text-center">
                          <img src="https://placehold.it/300x300" class="img-circle img-responsive dropdown-img" />
                        </p>
                      </div>
                      <div class="col-md-9 pleft-0">
                        <div class="row">
                          <div class="col-md-12">
                            <div class="col-md-12">
                              <p class="text-left">
                                <strong style="color: black;" id=""> <%= val.name %></strong>
                              </p>
                            </div>
                            <div class="col-md-12">
                              <div class="row">
                                <div class="col-md-6 col-sm-6 col-xs-6">

                                  <input type="hidden" name="senderId" id="senderId" value="<%= val.userId._id %>">
                                  <input type="hidden" name="senderName" id="senderName" value="<%= val.name %>">
                                  <button type="submit" name="accept" id="accept_friend"
                                    class="btn btn-default drop-accept accept"><i class="fa fa-check"
                                      aria-hidden="true"></i> Accept</button>
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-6">
                                  <input type="hidden" name="user_Id" id="user_Id" value="<%= val.userId._id %>">
                                  <button style="color: black;" type="submit" name="cancel"
                                    class="btn drop-cancel remove" id="cancel_friend">
                                    <i class="fa fa-times" aria-hidden="true"></i> Cancel
                                  </button>
                                </div>
                              </div>
                            </div>

                          </div>
                        </div>
                      </div>
                    </div>

                    <hr />
                    <% }) %>
                    <% } else { %>
                    <p style="color: black;" class="text-center"> No Friend Requests</p>
                    <% } %>
                  </div>
                </div>
              </li>

            </ul>
          </li>

          <li><a href="/home" style="color: #9993B2;">Groups</a></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
              aria-expanded="false" style="color: #9993B2;"><%= user.name %> <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><a href="#">Action</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">Separated link</a></li>
            </ul>
          </li>
        </ul>
      </div>


    </div>
  </nav>
  <!--# Navbar #-->
</header>